{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password"
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "Name of the VM to be created"
      }
    },
    "vmSize": {
      "type": "string",
      "metadata": {
        "description": "VM Size for creating the Virtual Machine"
      }
    },
    "BoomiAuthenticationType": {
        "defaultValue": "Token",
        "allowedValues": [
          "Token",
          "Password"
        ],
        "type": "string",
        "metadata": {
          "description": "Boomi Platform Authentication Type"
        }
      },
    "user": {
      "type": "string",
      "metadata": {
        "description": "AtomSphere username"
      }
    },
    "password": {
      "type": "securestring",
      "defaultValue" : "[string('')]",
      "metadata": {
        "description": "AtomSphere password"
      }
    },
     "BoomiMFAAPIToken": {
        "type": "securestring",
        "defaultValue" : "[string('')]",
        "metadata": {
          "description": "An MFA API token generated by your Dell Boomi Administrator."
        }
      },
    "accountId": {
      "type": "string",
      "metadata": {
        "description": "AtomSphere Account ID"
      }
    },
    "atomName": {
      "type": "string",
      "metadata": {
        "description": "Atom Name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location"
      }
    },
    "_artifactsLocation": {
      "type" : "string",
      "metadata" : {
        "description": "The base Url for dependent assets",
        "artifactsBaseUrl": ""
      },
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "_artifactsLocationSasToken": {
          "type": "securestring",
          "metadata": {
              "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated. Use the defaultValue if the staging location is not secured."
          },
          "defaultValue": ""
      }
  },
   "variables": {
        "nestedtemplateUri1": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/azuredeploy.license.validation.json', parameters('_artifactsLocationSasToken')))]",
        "nestedtemplateUri2": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/azuredeploy.infrastructure.json', parameters('_artifactsLocationSasToken')))]"
   },
  "resources": [
      {
      "name": "BoomiLicenseValidation",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedtemplateUri1')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "BoomiAuthenticationType": {
            "value": "[parameters('BoomiAuthenticationType')]"
          },
          "accountId": {
            "value": "[parameters('accountId')]"
          },
          "user": {
            "value": "[parameters('user')]"
          },
          "BoomiMFAAPIToken": {
            "value": "[parameters('BoomiMFAAPIToken')]"
          },
          "Password": {
            "value": "[parameters('Password')]"
          },
          "_artifactsLocation" :{
            "value": "[parameters('_artifactsLocation')]"
          }
        }
      }
    },
    {
      "name": "BoomiAtomQuickStart",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "dependsOn": ["BoomiLicenseValidation"],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('nestedtemplateUri2')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "vmName": {
            "value": "[parameters('vmName')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "BoomiAuthenticationType": {
            "value": "[parameters('BoomiAuthenticationType')]"
          },
          "accountId": {
            "value": "[parameters('accountId')]"
          },
          "user": {
            "value": "[parameters('user')]"
          },
          "BoomiMFAAPIToken": {
            "value": "[reference('BoomiLicenseValidation').outputs.installationToken.value]"
          },
          "Password": {
            "value": "[parameters('Password')]"
          },
          "atomName": {
            "value": "[parameters('atomName')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "baseUrl": {
            "value": "[parameters('_artifactsLocation')]"
          },
           "deploymentCondition": {
            "value": "[reference('BoomiLicenseValidation').outputs.licenseValidation.value]"
           }
     
        }
      }
    }
  ],
  "outputs": {
    "licenseValidation": {
      "type": "string",
      "value": "[reference('BoomiLicenseValidation').outputs.licenseValidation.value]"
    }
  }
}
